        const course = timetable[courseKey];
        if (course && confirm(`ç¢ºå®šè¦å¾èª²è¡¨ç§»é™¤ã€Œ${course.name}ã€å—ï¼Ÿ`)) {
          removeFromTimetable(course);
          displayTimetable();
        }
      });
    });
  }

