    };

    saveTimetable();
    displayTimetable(); // æ›´æ–°èª²è¡¨é¡¯ç¤ºå’Œå­¸åˆ†

    return true;
  }

  // å¾èª²è¡¨ç§»é™¤èª²ç¨‹
  function removeFromTimetable(course) {
    const courseKey = getCourseKey(course);

