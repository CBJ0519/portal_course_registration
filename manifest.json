{
  "manifest_version": 3,
  "name": "NYCU 選課助手",
  "version": "3.0.1",
  "description": "NYCU 選課助手：支援 AI 智能搜尋、多條件篩選、課程詳細資訊查詢、書籤管理、課表製作與匯出，讓選課更輕鬆！",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://timetable.nycu.edu.tw/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_title": "開啟 NYCU 選課助手"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://timetable.nycu.edu.tw/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "128.png",
    "48": "128.png",
    "128": "128.png"
  }
}
